        <div class="card" style="height:300px">
            <div class="card-image waves-effect waves-block waves-light">
                <!--put the image here using handlebars"-->
                <img class="activator center" src={{this.image}} style="max-height:200px">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"><a href={{this.link}}>{{this.title}}</a>
                    <span data-id="{{this.id}}" class="save-btn"><i class="far fa-save right"></i></span>
                    <span data-id="{{this.id}}" class="notes-btn"><i class="far fa-sticky-note right"></i></span></span>
                {{!-- <p><a href={{this.title}}>{{this.link}}</a></p> --}}
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-4" id="notes{{this.id}}"><i class="material-icons right">close</i></span>


                {{!-- <button data-id="{{this.id}}" class="save-btn"><i class="far fa-save"></i></button> --}}

                {{!-- <button data-id="{{this.id}}" class="notes-btn"><i class="far fa-sticky-note"></i></button> --}}
            </div>
        </div>
    </div>
{{/each}}
</div>


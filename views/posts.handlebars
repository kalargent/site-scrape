<script type="text/javascript">

    // Display the note section when you click the notes button
    $(".notes-btn").on("click", function (event) {
        event.preventDefault();
        console.log("i clicked notes");
        // $("#note-modal").modal("toggle");
        $("#notes").empty();

        var thisId = $(this).attr("data-id");

        $.ajax({
            type: "GET",
            url: "/posts/" + thisId
        })

            .then(function (data) {
                console.log(data);
                $("#notes").append("<h2>" + data.title + "</h2>");
                $("#notes").append("<input id='titleinput' name='title' >");
                $("#notes").append("<textarea id='bodyinput' name='body'></textarea>");
                $("#notes").append("<button class='add' data-id='" + data._id + "' id='savenote'>Add a Note</button>");

                if (data.note[0]) {
                    console.log(data.note[0]); 
                    $("#titleinput").val(data.note[0].title);
                    $("#bodyinput").val(data.note[0].body);
                }
            })

    });

    $(document).on("click", "#savenote", function () {
        console.log("i'm adding a note");
        var thisId = $(this).attr("data-id");
        console.log("saving a note to " + thisId)

        $.ajax({
            type: "POST",
            url: "/posts/" + thisId,
            data: { 
                title: $("#titleinput").val(),
                body: $("#bodyinput").val()
            }
        })
    })


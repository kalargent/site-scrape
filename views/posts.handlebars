<div class="container">
    <div class="row">
        <!--START COL1 HERE -->
        <div class="col-md-8 table-col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Link</th>
                        <th scope="col">Summary</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.link}}</td>
                        <td>{{this.summary}}</td>
                        <td>
                            <button data-id="{{this.id}}" class="save-btn"><i class="far fa-save"></i></button>

                            <button data-id="{{this.id}}" class="notes-btn"><i class="far fa-sticky-note"></i></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <!--END THE COL HERE -->
        </div>
        <div class="col-med-4" id="notes">
            <p>this is where the notes will go</p>
        </div>
    </div>
</div>

